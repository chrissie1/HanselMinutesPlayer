<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/mainView">
    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/linearLayout3"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <Button  android:scaleType="fitCenter"
                 android:id="@+id/mainRefreshListButton"
                 android:text="@string/RefreshList"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
        <TextView android:text="@string/NoPodCasts"
                  android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:id="@+id/numberofpodcasts"/>
    </LinearLayout>
    <ListView android:id="@+id/podCastList"
    	      android:layout_width="fill_parent"
    	      android:layout_marginBottom="10dp"
              android:layout_height="wrap_content"
    	      android:layout_weight="1">
    </ListView>
    <include layout="@layout/player"/>
</LinearLayout>
